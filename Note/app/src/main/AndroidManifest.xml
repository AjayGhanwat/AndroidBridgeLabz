<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.bridgelabz.note">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".login.view.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".register.view.RegisterActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".view.MainPanelActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>
        </activity>
        <activity
            android:name=".addnotes.view.AddActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".editnote.view.EditNote">
        </activity>

        <service android:name=".view.NotifyService" />
        <service android:name=".view.ScheduleService" />
    </application>

</manifest>